<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventHistoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventHistoryRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emptyViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text='"Nothing here. Please Register first and come back here."'
        android:textColor="@color/backgroundBlack"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/eventHistoryRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/eventHistoryRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/eventHistoryRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/eventHistoryRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>